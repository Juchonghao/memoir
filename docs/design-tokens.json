{
  "$schema": "https://tr.designtokens.org/format/",
  "name": "纪传体AI应用设计Tokens",
  "version": "1.0.0",
  "style": "Editorial Magazine Style",
  "color": {
    "text": {
      "primary": {
        "$type": "color",
        "$value": "#1A1A1A",
        "$description": "主要文本（近黑，比纯黑柔和），WCAG AAA 15.8:1"
      },
      "secondary": {
        "$type": "color",
        "$value": "#4A4A4A",
        "$description": "次要文本（副标题、署名），WCAG AAA 8.2:1"
      },
      "tertiary": {
        "$type": "color",
        "$value": "#6B6B6B",
        "$description": "辅助文本（说明、元数据），WCAG AA+ 5.7:1"
      }
    },
    "background": {
      "primary": {
        "$type": "color",
        "$value": "#FEFEFE",
        "$description": "页面底色（温暖白）"
      },
      "surface": {
        "$type": "color",
        "$value": "#F9F9F7",
        "$description": "卡片/表面（米白色调）"
      },
      "divider": {
        "$type": "color",
        "$value": "#E5E5E0",
        "$description": "分隔线（低对比）"
      }
    },
    "accent": {
      "primary": {
        "$type": "color",
        "$value": "#D4A574",
        "$description": "琥珀金（象征时光与传承），大字AA 3.8:1"
      },
      "hover": {
        "$type": "color",
        "$value": "#B8935F",
        "$description": "Hover态（深化15%）"
      },
      "light": {
        "$type": "color",
        "$value": "#E8C9A0",
        "$description": "边框高亮（淡化20%）"
      }
    },
    "semantic": {
      "success": {
        "$type": "color",
        "$value": "#3A5A40",
        "$description": "成功/完成（墨绿，文学气息）"
      },
      "warning": {
        "$type": "color",
        "$value": "#B8860B",
        "$description": "警告（古铜金）"
      },
      "error": {
        "$type": "color",
        "$value": "#8F1C1C",
        "$description": "错误（深红，非刺眼）"
      }
    }
  },
  "typography": {
    "fontFamily": {
      "display": {
        "$type": "fontFamily",
        "$value": "'Noto Serif SC', 'Playfair Display', Georgia, serif",
        "$description": "标题字体（衬线体）"
      },
      "body": {
        "$type": "fontFamily",
        "$value": "Georgia, 'Noto Serif SC', 'Songti SC', serif",
        "$description": "正文字体（易读衬线）"
      },
      "ui": {
        "$type": "fontFamily",
        "$value": "'Inter', -apple-system, BlinkMacSystemFont, sans-serif",
        "$description": "UI元素字体（无衬线）"
      }
    },
    "fontSize": {
      "display": {
        "$type": "dimension",
        "$value": "64px",
        "$description": "Display标题（传记封面、章节大标题）"
      },
      "headline": {
        "$type": "dimension",
        "$value": "40px",
        "$description": "Headline（篇章标题、二级标题）"
      },
      "subhead": {
        "$type": "dimension",
        "$value": "28px",
        "$description": "Subhead（三级标题、卡片标题）"
      },
      "bodyLarge": {
        "$type": "dimension",
        "$value": "21px",
        "$description": "Body Large（引言段落）"
      },
      "body": {
        "$type": "dimension",
        "$value": "18px",
        "$description": "Body（正文主体）"
      },
      "small": {
        "$type": "dimension",
        "$value": "16px",
        "$description": "Small（图片说明、引用来源）"
      },
      "metadata": {
        "$type": "dimension",
        "$value": "14px",
        "$description": "Metadata（时间戳、署名、标签）"
      }
    },
    "fontWeight": {
      "regular": {
        "$type": "number",
        "$value": 400,
        "$description": "常规"
      },
      "semibold": {
        "$type": "number",
        "$value": 600,
        "$description": "半粗"
      },
      "bold": {
        "$type": "number",
        "$value": 700,
        "$description": "粗体"
      }
    },
    "lineHeight": {
      "tight": {
        "$type": "number",
        "$value": 1.1,
        "$description": "紧凑（Display标题）"
      },
      "heading": {
        "$type": "number",
        "$value": 1.2,
        "$description": "标题"
      },
      "body": {
        "$type": "number",
        "$value": 1.6,
        "$description": "正文（舒适阅读）"
      },
      "relaxed": {
        "$type": "number",
        "$value": 1.7,
        "$description": "宽松（Body Large）"
      }
    },
    "letterSpacing": {
      "tight": {
        "$type": "dimension",
        "$value": "-0.01em",
        "$description": "紧凑（Display）"
      },
      "normal": {
        "$type": "dimension",
        "$value": "0em",
        "$description": "正常"
      },
      "wide": {
        "$type": "dimension",
        "$value": "0.02em",
        "$description": "宽松（按钮文字）"
      }
    }
  },
  "spacing": {
    "xs": {
      "$type": "dimension",
      "$value": "8px",
      "$description": "行内小间距、图标边距"
    },
    "sm": {
      "$type": "dimension",
      "$value": "16px",
      "$description": "紧凑元素间距"
    },
    "md": {
      "$type": "dimension",
      "$value": "24px",
      "$description": "段落间距（默认）"
    },
    "lg": {
      "$type": "dimension",
      "$value": "32px",
      "$description": "Pull Quote边距、卡片内边距"
    },
    "xl": {
      "$type": "dimension",
      "$value": "48px",
      "$description": "组件间距"
    },
    "2xl": {
      "$type": "dimension",
      "$value": "64px",
      "$description": "章节分隔"
    },
    "3xl": {
      "$type": "dimension",
      "$value": "96px",
      "$description": "重要视觉断点"
    },
    "4xl": {
      "$type": "dimension",
      "$value": "128px",
      "$description": "篇章级间距"
    }
  },
  "borderRadius": {
    "none": {
      "$type": "dimension",
      "$value": "0px",
      "$description": "无圆角（图片直角）"
    },
    "sm": {
      "$type": "dimension",
      "$value": "4px",
      "$description": "小圆角（按钮、输入框）"
    },
    "md": {
      "$type": "dimension",
      "$value": "8px",
      "$description": "中圆角（卡片）"
    }
  },
  "boxShadow": {
    "card": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "4px",
        "blur": "12px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.08)"
      },
      "$description": "卡片默认阴影"
    },
    "cardHover": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "8px",
        "blur": "24px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.12)"
      },
      "$description": "卡片Hover阴影"
    },
    "modal": {
      "$type": "shadow",
      "$value": {
        "offsetX": "0px",
        "offsetY": "16px",
        "blur": "48px",
        "spread": "0px",
        "color": "rgba(0, 0, 0, 0.16)"
      },
      "$description": "浮动层阴影（模态框）"
    }
  },
  "animation": {
    "duration": {
      "fast": {
        "$type": "duration",
        "$value": "200ms",
        "$description": "快速（按钮Hover、小元素）"
      },
      "standard": {
        "$type": "duration",
        "$value": "300ms",
        "$description": "标准（卡片交互、展开收起）"
      },
      "slow": {
        "$type": "duration",
        "$value": "400ms",
        "$description": "慢速（页面转场、重要状态）"
      }
    },
    "easing": {
      "easeOut": {
        "$type": "cubicBezier",
        "$value": [0.0, 0.0, 0.2, 1.0],
        "$description": "ease-out（快进慢出，自然感）"
      },
      "easeInOut": {
        "$type": "cubicBezier",
        "$value": [0.4, 0.0, 0.2, 1.0],
        "$description": "自定义easing（精致动效）"
      }
    }
  },
  "layout": {
    "maxWidth": {
      "article": {
        "$type": "dimension",
        "$value": "650px",
        "$description": "传记文章列最大宽度（60-75字符）"
      },
      "container": {
        "$type": "dimension",
        "$value": "1280px",
        "$description": "全局容器最大宽度"
      }
    },
    "breakpoint": {
      "sm": {
        "$type": "dimension",
        "$value": "640px",
        "$description": "移动端"
      },
      "md": {
        "$type": "dimension",
        "$value": "768px",
        "$description": "平板"
      },
      "lg": {
        "$type": "dimension",
        "$value": "1024px",
        "$description": "桌面"
      },
      "xl": {
        "$type": "dimension",
        "$value": "1280px",
        "$description": "大桌面"
      }
    }
  }
}
